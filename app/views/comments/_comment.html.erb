<div class='row' id="comment-<%= comment.id%>" >
    <div class='col-lg-2' style='padding-top:10px'><%= image_tag (comment.user.avatar), size: '50x50', class: 'img-circle' %>
    </div>
    <div class='col-lg-6'><strong><%= comment.user.name %></strong></div>
    <div class='col-lg-4 creating'><%= creating(comment) %></div>

    <div class='col-lg-12' style='padding-top:10px'><%= comment.comment %>
        <div class='row'>
        <hr/>
            <div class='col-lg-6 text-center'>
                <%= link_to like_comment_path(comment), id: "comment-#{comment.id}-like", method: :put, remote: true do %>
                    <i class='fa fa-thumbs-up ' ></i>
                <% end %>
                <p id="comment-<%= comment.id %>-likesize" class="likesize"><%= comment.get_likes.size %></p>
            </div>
            <div class='col-lg-6 text-center'>
                <% if (comment.user == current_user) %>
                    <%= link_to comment, method: :delete, data: {confirm: 'Are you sure?' }, remote: true do %>
                        <i class='fa fa-remove fa-lg' ></i>
                    <% end %>
                <% end %>
            </div>
        </div>
    </div>
</div>

<script>
function myFunction(x) {
    x.classList.toggle("fa-thumbs-down");
}
</script>


