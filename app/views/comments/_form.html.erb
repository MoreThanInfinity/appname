<%= form_tag comments_path, remote: true, id: 'comments-form', class: 'form-group row' do %>
	<%= hidden_field_tag :commentable_type, commentable.class.to_s  %>
	<%= hidden_field_tag :commentable_id, commentable.id %>

			<%= text_field_tag :comment_text, '', class: 'form-control', placeholder: "leave your comment..." %>

	<div class='row'>
		<div class='col-lg-5 col-lg-offset-1 '>
			<%= submit_tag "save comment", class: 'btn btn-success btn-block' %>		
		</div>
		<div class='col-lg-5'>
			<button class='btn btn-warning btn-block' type="reset" onclick="return confirm('Are you sure?')" > reset </button>			
		</div>
	</div>

<% end %>