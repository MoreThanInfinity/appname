<div class='row text-center'>
	<h1>Posts</h1>
</div>

<div class='row' style='margin-bottom: 15px;'>
	<div class='col-md-4 col-md-offset-4 text-center'><%= link_to 'New Post', new_post_path, class: 'btn btn-lg btn-primary btn-block', id: "new_link", remote: true %>
		
	</div>
</div>

<div class='posts'>
	<% if @posts.present? %>
		<%= render @posts %>
	<% else %>
		<h2 class='text-center'>
		<div class="row">
		<div class='col-lg-8 col-lg-offset-2'>It`s a simple search system, but it`s realy work. Please check detalis and try again.
		</div>
		</div>

		</h2>
	<% end -%>
</div >

<div class='row text-center'>
<% if !@posts.empty? %>
  <%= will_paginate(@posts, :renderer => WillPaginate::ActionView::Bootstrap4LinkRenderer) %>
<% end %>
</div>


 




