
<% if !@user.followed_by? current_user %>
$('#user-<%= @user.id %>-follow').click(function(){
	$(this).find('i').toogleClass('fa-user-plus fa-user-times');
});
<% elsif @user.followed_by? current_user %>
$('#user-<%= @user.id %>-follow').click(function(){
	$(this).find('i').toogleClass('fa-user-times fa-user-plus');
});
<% end %>  


$("#user-<%= @user.id %>-followsize").html("<%= @user.followers_count %>");