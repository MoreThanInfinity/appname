<div class='row'>
	<div class='col-lg-12  text-center'>
		<h1><%= @user.name %></h1><hr/>
	
		<div class='row'>
			<div class='col-lg-6  text-center'>

					<h3><strong ><%= @user.name %></strong><hr/></h3>
					<%= image_tag (@user.avatar), class: 'img-responsive center-block img-rounded' %>

			</div>

			<div class='col-lg-6  text-center'>


				<h3><strong >Some information about user</strong><hr/></h3>
				<h5><%= @user.about %></h5>


			</div>
		</div>
	</div>

</div>
<hr/>




<% if @user != current_user %>

	<div class='row'>
		<div class='col-md-6 text-center'><%= link_to follow_user_path(@user), id: 'user-#{ @user.id}-follow', method: :put, remote: :true  do %>
				<i class='fa fa-thumbs-up fa-lg'></i>
			<% end %>
			<p id='user-<%= @user.id %>-followsize' style='color:#008080; font-size:120%'><%= @user.followers_count %></p>
		</div>
		<div class='col-md-6 text-center'><%= link_to chats_path( other_user: @user.id), method: :post, id: 'user-#{ @user.id}-follow'  do %>
				<i class='fa fa-envelope fa-lg'></i>
			<% end %>
		</div>
		
	</div>
<% end -%>

